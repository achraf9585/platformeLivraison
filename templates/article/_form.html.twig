{% block javascripts %}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" rel="stylesheet"/>
{% block stylesheets %}
<style>
html,body{
background: white;
background-size: cover;
background-repeat: no-repeat;
height: 100%;
font-family: 'Numans', sans-serif;
}

.container{
height: 100%;
align-content: center;
}

.card{
height: 370px;
margin-top: auto;
margin-bottom: auto;
width: 700px;
background-color: rgba(0,0,0,0) !important;
}

.social_icon span{
font-size: 60px;
margin-left: 10px;
color: #FFC312;
}

.social_icon span:hover{
color: white;
cursor: pointer;
}

.card-header h3{
color: white;
}

.social_icon{
position: absolute;
right: 20px;
top: -45px;
}

.input-group-prepend span{
width: 50px;
background-color: #FFC312;
color: black;
border:0 !important;
}

input:focus{
outline: 0 0 0 0  !important;
box-shadow: 0 0 0 0 !important;

}

.remember{
color: white;
}

.remember input
{
width: 20px;
height: 20px;
margin-left: 15px;
margin-right: 5px;
}

.login_btn{
color: black;
background-color: #FFC312;
width: 100px;
}

.login_btn:hover{
color: black;
background-color: white;
}

.links{
color: white;
}

.links a{
margin-left: 4px;
}
</style>
{% endblock %}

{% endblock %}

<div class="container">
  <div class="d-flex justify-content-center h-100">
    <div class="card">
     
        <h1 class="h3 mb-3 font-weight-normal" style="color:black">
          {% if editMode %}
                Modifier un plat
              {% else %}
                Ajouter un plat
          {% endif %}
          
        </h1>
      
    <div class="card-body">      
     {{ form_start(form) }}
    {{ form_widget(form.libele, {'attr':{'class':'form-control','placeholder':'Nom du nouveau plat...'}}) }}
    <br>
    
     {{ form_widget(form.imag, {'attr':{'class':'form-control'}}) }}
    <br>
    {{ form_widget(form.categorie,{'attr':{'class':'form-control'}}) }}
   

        
 

    
    {{ form_widget(form.prix , {'attr':{'class':'form-control','placeholder':'Prix du nouveau plat...'}}) }}
    <br>
    <button style="width:210px;" class="btn btn-success">{{ button_label|default('Enregistrer') }}</button>
{{ form_end(form) }}
</div>
</div>
</div>
</div>




