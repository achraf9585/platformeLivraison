{% extends 'baseres.html.twig' %}

{% block title %}Plat index{% endblock %}

{% block body %}


    <section class="container">

        <div class="container" style="margin-top:30px;">
            <div class="table-wrapper">
                <div class="table-title"   style="background-color:#E95420;">
                    <div class="row">
                        <div class="col-sm-6">
                            <h2 style="color:#ffffff;textSize:7px;margin-left:11px;"> Liste des<b> Plats</b></h2>
                        </div>
                        <a style="width:150px;height:37px;margin-top:-55px;margin-left:670px;color:white;" class="btn btn-success"  href="{{ path('plat_new') }}">Ajouter un plat</a>


                    </div>
                </div>
                <div class="table-title" style="background-color:#E95420;">

                </div>
                <table class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom du plat</th>
                        <th>{{ knp_pagination_sortable (properties,'Categorie','Categorie')}}↑↓</th>

                        <th>Image du plat</th>
                        <th>{{ knp_pagination_sortable (properties,'Prix','Prix')}} ↑↓   </th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for plat in properties %}
                        <tr>
                            <td>{{ plat.id }}</td>
                            <td>{{ plat.libele }}</td>
                            <td>{{ plat.categorie.getLibele() }}</td>

                            <td> <img src=" {{ plat.imag }}" ></td>
                            <td>{{ plat.prix}}dt</td>
                            <td>
                                <a href="{{ path('plat_show', {'id': plat.id}) }}"><i class="material-icons" title="voir">&#xE417;</i></a>
                                <a href="{{ path('plat_edit', {'id': plat.id}) }}" style="color:#E4A11D;"><i class="material-icons" data-toggle="tooltip" title="Modifier" >&#xE254;</i></a>


                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">liste vides</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>



                <div class="pagination">
                    {{ knp_pagination_render(properties) }}
                </div>
            </div>
        </div>



    </section>
{% endblock %}
