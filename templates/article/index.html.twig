{% extends 'baseres.html.twig' %}

{% block title %}Plat index{% endblock %}

{% block body %}


    <section class="container">

        <div class="container" style="margin-top:30px;">
            <div class="table-wrapper">
                <div class="table-title"   style="background-color:#E95420;">
                    <div class="row">
                        <div class="col-sm-6">
                            <h2 style="color:#ffffff;textSize:7px;margin-left:11px;"> Liste des<b> articles</b></h2>
                        </div>
                        <a style="width:150px;height:37px;margin-top:-55px;margin-left:670px;color:white;" class="btn btn-success"  href="{{ path('plat_new') }}">Ajouter un article</a>


                    </div>
                </div>
                <div class="table-title" style="background-color:#E95420;">

                </div>
                <table class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom de l'article</th>
                        <th>{{ knp_pagination_sortable (properties,'Categorie','Categorie')}}↑↓</th>
                        <th>Image</th>
                        <th>{{ knp_pagination_sortable (properties,'Prix','Prix')}} ↑↓   </th>
                        <th>Supplements   </th>

                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for article in properties %}
                        <tr>
                            <td>{{ article.id }}</td>
                            <td>{{ article.libele }}</td>
                            <td>{{ article.categorie.getLibele() }}</td>
                            <td><img src="{{ asset('images/articles/'~ article.imageName) | imagine_filter('test') }}" /> </td>
                            <td>{{ article.prix}}dt</td>
                          <td>




                            {% for supps in article.supplements %}
                                <ul>
                                  <li>
                            {{ supps.libele}}
                                  </li>
                              </ul>
                            {% endfor %}
                          </td>
                            <td>
                                <a href="{{ path('plat_show', {'id': article.id}) }}"><i class="material-icons" title="voir">&#xE417;</i></a>
                                <a href="{{ path('plat_edit', {'id': article.id}) }}" style="color:#E4A11D;"><i class="material-icons" data-toggle="tooltip" title="Modifier" >&#xE254;</i></a>


                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">liste vides</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>



                <div class="pagination">
                    {{ knp_pagination_render(properties) }}
                </div>
            </div>
        </div>



    </section>
{% endblock %}
