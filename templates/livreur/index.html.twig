{% extends 'base.html.twig' %}

	{% block body %}
        <main class="app-content">
            <div class="app-title">

                <ul class="app-breadcrumb breadcrumb">
                    <li class="breadcrumb-item"><i class="fa fa-secret fa-lg"></i></li>
                    <li class="breadcrumb-item"><a href="#">Livreurs</a></li>
                </ul>
            </div>
            <div class="container">
                <div class="table-wrapper" style="width:1000px;margin-left:100px;">
                    <div class="table-title">
                        <div class="row">
                            <div class="col-sm-6">
                                <h2>Liste des  <b>Livreurs</b></h2>
                            </div>

                        </div>
                    </div>


                    <table id="regions" class="table table-bordered table-striped">
                        <thead>
                        <tr>

                            <th>Id</th>
                            <th>Email</th>
                            <th>Nom & Prenom</th>
                            <th>Numero Téléphone</th>
                            <th>Etat</th>
                            <th>Type Vehicule</th>


                            <th>Action</th>

                        </tr>
                        </thead>
                        <tbody>



                        {% for livreur in livreurs %}
                                {% if livreur.disponibilite=="oui" and livreur.etat=="accepte" %}
                            <tr style="background: #52BE80">
                                {% else %}
                                <tr>
                            {% endif %}
                                <client>
                                    <td>{{ livreur.id }}</td>
                                    <td>{{ livreur.email }}</td>
                                    <td>{{ livreur.nom }} {{ livreur.prenom }} </td>
                                    <td>{{ livreur.numtel1 }}</td>
                                    <td>{{ livreur.etat }}</td>
                                    <td>{{ livreur.typevehicule }}</td>

                                    <td>
                                        <a href="{{ path('livreur_edit', {'id': livreur.id}) }}" class="edit"><i class="material-icons" data-toggle="tooltip" title="Modifier">&#xE254;</i></a>

                                        <a  href="{{ path('livreur_show', {'id': livreur.id}) }}"  ><i title="Voir" class="material-icons">&#xE8F4;</i></a>
                                    </td>


                                </client>
                            </tr>
                        {% endfor %}





                        </tbody>
                    </table>


                </div>
            </div>
            <!-- Add Modal HTML -->






        </main>



    {% endblock %}
{% block javascripts %}
    <script src="{{ asset('js/jquery-3.2.1.min.js')}}"></script>
    <script src="{{ asset('js/popper.min.js') }}"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="{{ asset('js/main.js') }}"></script>
    <script src="{{ asset('bower_components/datatables.net-bs/js/dataTables.bootstrap.js') }}"></script>
    <script src="{{ asset('bower_components/datatables.net/js/jquery.dataTables.min.js') }}"></script>
