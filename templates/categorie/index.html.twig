{% extends 'baseres.html.twig' %}

{% block title %}Categorie index{% endblock %}

{% block body %}

    <section class="container">

        <div class="container" style="margin-top:30px;">
            <div class="table-wrapper">
                <div class="table-title"   style="background-color:#E95420;">
                    <div class="row">
                        <div class="col-sm-6">
                            <h2 style="color:#ffffff;textSize:7px;margin-left:11px;"> Liste des<b> Catégories</b></h2>
                        </div>

                    </div>
                    <div class="col-sm-6">

                        <a style="width:150px;height:37px;margin-top:-80px;margin-left:670px;color:white;" class="btn btn-success"  href="{{ path('categorie_new') }}">Créer une catégorie</a>




                    </div>
                </div>
                <div class="table-title" style="background-color:#E95420;">

                </div>
                <table class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>

                        </th>
                        <th>Id</th>
                        <th>{{ knp_pagination_sortable (properties,'nom','nom')}}</th>

                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for categorie in properties %}
                        <tr>
                        <td></td>
                        <td> {{ categorie.id }} </td>
                        <td> {{ categorie.libele }} </td>
                        <td>
                            <a href="{{ path('categorie_edit', {'id': categorie.id}) }}" style="color:#E4A11D;"><i class="material-icons" data-toggle="tooltip" title="Modifier" >&#xE254;</i></a>

                            <a href="{{ path('categorie_show', {'id': categorie.id}) }}" ><i class="material-icons" title="voir">&#xE417;</i></a>
                        </td>
                    {% else %}
                        <tr>
                            <td colspan="4">liste vides</td>

                        </tr>

                        </tr>
                    {% endfor %}
                    </tbody>
                </table>



                <div class="pagination" style="margin-top:-20px;float:right;">
                    {{ knp_pagination_render(properties) }}
                </div>
            </div>
        </div>

    </section>

    <!-- //////////////////////////-->

    <!-- Ajouter catégorie -->
    <div id="addcategorie" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">


            </div>
        </div>
    </div>
    <!-- //////////////////////////-->


{% endblock %}
