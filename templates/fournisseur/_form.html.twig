<div class="container" style="height:270px;">
    <h1 style="margin-left: 10px;">{% if editMode %}
            Modifier la région n° {{ region.id   }}
        {% else %}
            <br>
            Ajouter une nouvelle région
        {% endif %}</h1>
    <br>
    {{ form_start(form) }}

    {{ form_row(form.nom,{'attr':{'class':'form-control','placeholder':'Nom de la nouvelle région ...'}}) }}
    {{ form_row(form.prenom,{'attr':{'class':'form-control','placeholder':'Nom de la nouvelle région ...'}}) }}
    {{ form_row(form.email,{'attr':{'class':'form-control','placeholder':'Nom de la nouvelle région ...'}}) }}
    {{ form_row(form.password,{'attr':{'class':'form-control','placeholder':'Nom de la nouvelle région ...'}}) }}
    {{ form_row(form.numtel1,{'attr':{'class':'form-control','placeholder':'Nom de la nouvelle région ...'}}) }}
    {{ form_row(form.numtel2,{'attr':{'class':'form-control','placeholder':'Nom de la nouvelle région ...'}}) }}
    {{ form_row(form.adresse,{'attr':{'class':'form-control','placeholder':'Nom de la nouvelle région ...'}}) }}
    {{ form_row(form.datenaissance,{'attr':{'class':'form-control','placeholder':'Nom de la nouvelle région ...'}}) }}
    {{ form_row(form.etat,{'attr':{'class':'form-control','placeholder':'Nom de la nouvelle région ...'}}) }}
    {{ form_row(form.nomrestaurant,{'attr':{'class':'form-control','placeholder':'Nom de la nouvelle région ...'}}) }}
    {{ form_row(form.tempsapprox,{'attr':{'class':'form-control','placeholder':'Nom de la nouvelle région ...'}}) }}
    {{ form_row(form.imageFile,{'attr':{'class':'form-control','placeholder':'Nom de la nouvelle région ...'}}) }}

    <button class="btn">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
