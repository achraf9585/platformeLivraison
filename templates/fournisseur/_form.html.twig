<div class="container" style="width: 500px;height: 500px;">
    <h1 style="margin-left: 10px;">{% if editMode %}

            Modifier les données du Restaurant n° {{ fournisseur.id   }}
        {% else %}
            <br>
            Créer un nouveau Restaurant
        {% endif %}</h1>

    {{ form_start(form) }}
    <br>
    <div class="row">
        <div class="col-xs-6">
            <div class="input-group">

                {{ form_row(form.nom,{ 'attr': {'class': 'form-control' ,'style': 'width: 200px; ', 'placeholder': ' le nom du Restaurateur'}}) }}
            </div>
        </div>
        <!-- /.col -->
        <div class="col-xs-6">
            <div class="input-group">

                {{ form_row(form.prenom,{ 'attr': {'class': 'form-control' , 'style': 'width: 200px; ','placeholder': ' le prenom du Restaurateur'}}) }}

            </div>
        </div>
        <!-- /.col -->
    </div>
    <div class="row">
        <div class="col-xs-6">
            <div class="input-group" >
                {{ form_row(form.email,{'attr':{'class':'form-control','placeholder':'Adresse email ...'}}) }}
            </div>
        </div>
        <div class="col-xs-6" >
            <div class="input-group" >


                {{ form_row(form.etat,{'attr':{'class':'ennos'}}) }}

            </div>
        </div>
    </div>
        <!-- /.col -->
        {% if editMode %}

    {% else %}
    <div class="row">
        <div class="col-xs-6">
            <div class="input-group">
                {{ form_row(form.password,{'attr':{'class':'form-control','placeholder':'Mot de passe ...'}}) }}

            </div>
            </div>
            <div class="col-xs-6">
                <div class="input-group">

                    {{ form_row(form.confirm_password,{'attr':{'class':'form-control','style': 'width: 200px; ','placeholder':'Confirmer Mot de passe ...'}}) }}
                </div>

            </div>


    </div>
            {% endif %}



    <div class="row">
        <div class="col-xs-6">
            <div class="input-group">
                {{ form_row(form.numtel1,{'attr':{'class':'form-control','placeholder':'Numéro de téléphone 1...'}}) }}
            </div>
        </div>
        <div class="col-xs-6">
            <div class="input-group">

                {{ form_row(form.numtel2,{ 'attr': {'class': 'form-control' , 'placeholder': 'Numéro de téléphone 2...'}}) }}

            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-6">
            <div class="input-group">

                {{ form_row(form.datenaissance,{ 'attr': {'class': 'form-control' , 'placeholder': 'Prenom'}}) }}

            </div>
        </div>

        <div class="col-xs-6">
            <div class="input-group">

                {{ form_row(form.adresse,{ 'attr': {'class': 'form-control' , 'placeholder': 'Adresse fournisseur'}}) }}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-6">
            <div class="input-group">

                {{ form_row(form.nomrestaurant,{ 'attr': {'class': 'form-control' , 'placeholder': 'Nom du restaurant'}}) }}
            </div>
        </div>

        <div class="col-xs-6">
            <div class="input-group">
                {{ form_row(form.region,{'attr':{'class':'ennos','placeholder':'Nom de la ville ...'}}) }}

            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-6">
            <div class="input-group">


                {{ form_row(form.tempsapprox,{ 'attr': {'class': 'form-control' , 'placeholder': 'Temps approximatif'}}) }}



            </div>
        </div>
        <div class="col-xs-4">
            <div class="input-group" style="width: 50px;">
                {{ form_row(form.imageFile,{'attr':{'class':'ennos'}}) }}



            </div>
        </div>


        <button class="btn btn-success" style="width: 70%; margin-left: 70px; margin-top: 10px;">{{ button_label|default('Ajouter') }}</button>


        {{ form_end(form) }}
    </div>
</div>