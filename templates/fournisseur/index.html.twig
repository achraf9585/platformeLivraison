{% extends 'base.html.twig' %}

	{% block body %}
        <main class="app-content">
            <div class="app-title">

                <ul class="app-breadcrumb breadcrumb">
                    <li class="breadcrumb-item"><i class="fa fa-building fa-lg"></i></li>
                    <li class="breadcrumb-item"><a href="#">Fournisseur</a></li>
                </ul>
            </div>
            <div class="container">
                <div class="table-wrapper" style="width:800px;margin-left:100px;">
                    <div class="table-title">
                        <div class="row">
                            <div class="col-sm-6">
                                <h2>Gérer <b>Fournisseurs</b></h2>
                            </div>
                            <div class="col-sm-6">
                                <a href="#addEmployeeModal" class="btn btn-success" data-toggle="modal"><i class="material-icons">&#xE147;</i> <span>Ajouter  Fournisseur</span></a>

                            </div>
                        </div>
                    </div>

                    <div class="table-title" >
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="container">


                                </div>
                            </div>

                            <div class="col-sm-6">



                            </div>
                        </div>
                    </div>
                    <table class="table table-striped table-hover">
                        <thead>
                        <tr>

                            <th>{{ knp_pagination_sortable(properties, 'Id','id') }}</th>
                            <th></th>
                            <th>{{ knp_pagination_sortable(properties, 'Nom restaurant','nomrestaurant') }}</th>
                            <th></th>
                            <th></th>
                            <th>Logo</th>
                            <th></th>
                            <th></th>

                            <th>{{ knp_pagination_sortable(properties, 'Etat fournisseur','etat') }}</th>
                            <th></th>
                            <th></th>

                            <th>Action</th>

                        </tr>
                        </thead>
                        <tbody>



                        {% for fournisseur in properties %}
                            {% if fournisseur.etat=="Activé" %}
                                <tr style="background: #52BE80;">
                            {% else %}
                                <tr style="background: #D3CBCB;">
                            {% endif %}
                            <fournisseur>
                                <td>{{ fournisseur.id }}</td>
                                <td></td>
                                <td>{{ fournisseur.nomrestaurant }} </td>
                                <td></td>
                                <td></td>
                                <td><img src="{{ asset('images/articles/'~ fournisseur.imageName) | imagine_filter('test') }}" /></td>
                                <td></td>

                                <td> </td>
                                <td> {{ fournisseur.etat }}</td>
                                <td> </td>
                                <td></td>
                                <td>
                                    <a href="{{ path('fournisseur_edit', {'id': fournisseur.id}) }}" style="color:#E4A11D;"><i class="material-icons" data-toggle="tooltip" title="Modifier" >&#xE254;</i></a>

                                    <a href="{{ path('fournisseur_show', {'id': fournisseur.id}) }}" ><i class="material-icons" title="voir">&#xE417;</i></a>
                                </td>
                            </fournisseur>
                            </tr>

                        {% endfor %}





                        </tbody>
                    </table>
                    <div class="clearfix">

                        <ul class="pagination">
                            {{ knp_pagination_render(properties) }}
                        </ul>
                    </div>

                </div>
            </div>
            <!-- Add Modal HTML -->
            <div id="addEmployeeModal" class="modal fade">
                <div class="modal-dialog" style="height:100px; ">
                    <div class="modal-content" style="height: 570px;">
                        {{ include ('fournisseur/_form.html.twig') }}
                    </div>
                </div>
            </div>





        </main>



    {% endblock %}



{% block javascripts %}
    <script src="{{ asset('js/jquery-3.2.1.min.js')}}"></script>
    <script src="{{ asset('js/popper.min.js') }}"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="{{ asset('js/main.js') }}"></script>
    <script src="{{ asset('bower_components/datatables.net-bs/js/dataTables.bootstrap.js') }}"></script>
