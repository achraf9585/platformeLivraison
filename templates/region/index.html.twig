{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css')}}">

{% endblock %}

	{% block body %}
        <main class="app-content">
            <div class="app-title">

                <ul class="app-breadcrumb breadcrumb">
                    <li class="breadcrumb-item"><i class="fa fa-building fa-lg"></i></li>
                    <li class="breadcrumb-item"><a href="#">Région</a></li>
                </ul>
            </div>
            <div class="container">
                <div class="table-wrapper">
                    <div class="table-title">
                        <div class="row">
                            <div class="col-sm-6">
                                <h2>Gérer <b>Région</b></h2>
                            </div>
                            <div class="col-sm-6">
                                <a href="#addEmployeeModal" class="btn btn-success" data-toggle="modal"><i class="material-icons">&#xE147;</i> <span>Ajouter  Région</span></a>

                            </div>
                        </div>
                    </div>
<div class="box-body">
                    <table id="regions" class="table table-bordered table-striped">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Libelé</th>
                            <th>Etat</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for region in regions %}

                            <tr>
                                <region>
                                    <td>{{ region.id }}</td>
                                    <td>{{ region.libele }}</td>
                                    <td>{{ region.etatRegion    }}</td>
                                    <td>

                                        <a href="{{ path('region_edit', {'id': region.id}) }}" class="edit"><i class="material-icons" data-toggle="tooltip" title="Modifier">&#xE254;</i></a>
                                        <a  href="{{ path('region_show', {'id': region.id}) }}"  ><i title="Voir" class="material-icons">&#xE8F4;</i></a>
                                    </td>

                                </region>
                            </tr>
                        {% endfor %}
                        </tfoot>
                    </table>
</div>
                </div>
            </div>
            <!-- Add Modal HTML -->
            <div id="addEmployeeModal" class="modal fade">
                <div class="modal-dialog">
                    <div class="modal-content">
                        {{ include ('region/_form.html.twig') }}
                    </div>
                </div>
            </div>





        </main>



    {% endblock %}
{% block javascripts %}
    <script src="{{ asset('js/jquery-3.2.1.min.js')}}"></script>
    <script src="{{ asset('js/popper.min.js') }}"></script>
    <script src="{{ asset('js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('js/main.js') }}"></script>
